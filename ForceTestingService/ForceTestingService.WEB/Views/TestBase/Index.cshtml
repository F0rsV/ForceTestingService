@model IEnumerable<ForceTestingService.ApplicationCore.DTO.TestBaseDto>

<h1>Test Manager</h1>

<p>
    <a asp-action="Create">Create new Test</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfQuestions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountOfSeconds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfTries)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TopicName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfQuestions)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfSeconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfTries)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-action="ShowResults" asp-route-id="@item.Id">Show student's results</a>
            </td>
        </tr>
    }
    </tbody>
</table>
<p>
    <a asp-controller="Home" asp-action="Index">Go back</a>
</p>